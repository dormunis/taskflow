{
    "name": "taskflow",
    "version": "0.2.1",
    "description": "Productivity utilties for Toodist and Obsidian",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "identity",
        "notifications",
        "sidePanel"
    ],
    "icons": {
        "16": "res/cog-16.png",
        "48": "res/cog-48.png",
        "128": "res/cog-128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "notesContent.js",
                "notesSidepanel.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "todoist_add-task": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "MacCtrl+Shift+T"
            },
            "description": "Add Todoist task"
        },
        "toggle-footnotes": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Toggle footnotes sidepanel"
        },
        "obsidian_add-reference": {
            "suggested_key": {
                "default": "Ctrl+Shift+R",
                "mac": "MacCtrl+Shift+R"
            },
            "description": "Add Obsidian reference"
        },
        "obsidian_mark-reference": {
            "suggested_key": {
                "default": "Ctrl+R",
                "mac": "MacCtrl+R"
            },
            "description": "Mark Obsidian reference"
        }
    },
    "side_panel": {
        "default_path": "footnotes/sidepanel.html"
    },
    "oauth2": {
        "client_id": "7b68b822195f4e5d91a611d83a2d1cc5",
        "scopes": [
            "data:read_write"
        ]
    }
}
